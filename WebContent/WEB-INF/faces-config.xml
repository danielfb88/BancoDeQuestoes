<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<managed-bean>
		<managed-bean-name>grupoBean</managed-bean-name>
		<managed-bean-class>app.managedbean.GrupoManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	 
	<!-- REGRAS GLOBAIS -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<!-- INDEX -->
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<!-- GRUPO -->
		<navigation-case>
			<!-- INDEX GRUPO -->
			<from-outcome>indexGrupo</from-outcome>
			<to-view-id>/publico/grupo/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- LISTAR GRUPOS -->
			<from-outcome>listarGrupos</from-outcome>
			<to-view-id>/publico/grupo/listarGrupos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- VISUALIZAR GRUPO -->
			<from-outcome>visualizarGrupo</from-outcome>
			<to-view-id>/publico/grupo/visualizarGrupo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- ADICIONAR GRUPO -->
			<from-outcome>adicionarGrupo</from-outcome>
			<to-view-id>/publico/grupo/adicionarGrupo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- ALTERAR GRUPO -->
			<from-outcome>editarGrupo</from-outcome>
			<to-view-id>/publico/grupo/editarGrupo.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<!-- EXCLUIR GRUPO -->
			<from-outcome>excluirGrupo</from-outcome>
			<to-view-id>/publico/grupo/excluirGrupo.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<!-- REGRAS ESPECIFICAS -->

	<!-- <navigation-rule> <from-view-id>/usuario.xhtml</from-view-id> <navigation-case> 
		<from-outcome>sucesso</from-outcome> <to-view-id>mostraUsuario.xhtml</to-view-id> 
		</navigation-case> </navigation-rule> -->

</faces-config>
