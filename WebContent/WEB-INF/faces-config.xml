<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<managed-bean>
		<managed-bean-name>grupoBean</managed-bean-name>
		<managed-bean-class>app.managedbean.GrupoManagedBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<!-- REGRAS GLOBAIS -->
	<navigation-rule>
		<from-view-id>*</from-view-id>
		<navigation-case>
			<from-outcome>inicio</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX GRUPO -->
		<navigation-case>
			<from-outcome>indexGrupo</from-outcome>
			<to-view-id>/publico/grupo/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX USUARIO -->
		<navigation-case>
			<from-outcome>indexUsuario</from-outcome>
			<to-view-id>/publico/usuario/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX CURSO -->
		<navigation-case>
			<from-outcome>indexCurso</from-outcome>
			<to-view-id>/publico/curso/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX DISCIPLINA -->
		<navigation-case>
			<from-outcome>indexDisciplina</from-outcome>
			<to-view-id>/publico/disciplina/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX ASSUNTO -->
		<navigation-case>
			<from-outcome>indexAssunto</from-outcome>
			<to-view-id>/publico/assunto/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX ANO/SEMESTRE -->
		<navigation-case>
			<from-outcome>indexAnoSemestre</from-outcome>
			<to-view-id>/publico/anoSemestre/index.xhtml</to-view-id>
		</navigation-case>

		<!-- INDEX PERGUNTA -->
		<navigation-case>
			<from-outcome>indexPergunta</from-outcome>
			<to-view-id>/publico/pergunta/index.xhtml</to-view-id>
		</navigation-case>

	</navigation-rule>

	<!-- REGRAS ESPECIFICAS -->

	<!-- MÃ“DULO GRUPO -->
	<navigation-rule>
		<from-view-id>/publico/grupo/*</from-view-id>

		<navigation-case>
			<from-outcome>listar</from-outcome>
			<to-view-id>/publico/grupo/listar.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>novo</from-outcome>
			<to-view-id>/publico/grupo/adicionar.xhtml</to-view-id>
		</navigation-case>
		
		<navigation-case>
			<from-outcome>formularioEditar</from-outcome>
			<to-view-id>/publico/grupo/editar.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>