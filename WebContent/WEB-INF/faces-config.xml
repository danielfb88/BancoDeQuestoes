	<!-- BENS GERENCIÁVEIS -->
	<managed-bean>
		<managed-bean-name>grupoBean</managed-bean-name>
		<managed-bean-class>app.managedbean.GrupoMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>assuntoBean</managed-bean-name>
		<managed-bean-class>app.managedbean.AssuntoMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>usuarioBean</managed-bean-name>
		<managed-bean-class>app.managedbean.UsuarioMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>perguntaBean</managed-bean-name>
		<managed-bean-class>app.managedbean.PerguntaMB</managed-bean-class>
